# Aliases
## emacs
alias emd='emacs --daemon'
alias emk='emacsclient -e "(kill-emacs)"'
alias ems='emacsclient -c -a emacs'

## grep
# alias ag='grep --color-match="1;31"'
# alias grep='ag --color-match="1;31"'
alias grep='grep --color=auto'

## zshell
alias zsrc='source $ZDOTDIR/.zshrc'

## clear
alias c="clear"

## ls
alias ll='ls -lv --color=auto'
alias la='ls -lAv --sort=extension --group-directories-first --color=auto'

## pip3
alias pip='pip3'

## python3
alias python='python3'

# ## Kubernetes & Minikube
alias mk="minikube kubectl --"
alias k="kubectl"
alias ka="kubectl apply -f"
alias kd="kubectl describe"
alias kg="kubectl get"
alias kr="kubectl run"
alias ke="kubectl edit"
alias kdel="kubectl delete"

# ## the-fuck
# eval $(thefuck --alias)

## youtube-dl
alias ytmeta='yt-dlp --add-metadata -i'
alias ytsound='yt-dlp -x -f bestaudio/best'
